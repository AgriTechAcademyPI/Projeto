<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Aulas</title>

    <link rel="stylesheet" type="text/css" href="/css/adicionarAulas.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>




<body class="background">
    <header>

    <div class="navbar">
        <div class="menua">
            <a href="/"></a><img class="logo" src="/img/logo.svg" alt="logo">
            <a href="/">Home</a>
            <a href="/">Cursos</a>
       </div>
    </div>

    </header>

    <main>
        <div class="fundoMain">

            <div class="parteCima">
                <h1 class="titulo">Cadastro de aulas</h1>
            </div>


        <div class="parteBaixo">

            <div class="parte1">
                <h2>Curso: <%= curso[0].titulo%></h2>
                <img class="image" src="<%= curso[0].imagemCurso %>" alt="">
                <p><%= curso[0].descricao%></p>
            </div>

            <div class="parte2">
                <form method="POST" action="/adicionarAula">

                    <label for="tituloAula">Título</label>
                    <input type="text" name="tituloAula" id="tituloAula" >
                     <br>
                    <label for="descricaoAula">Descrição</label>
                    <input type="text" name="descricaoAula" id="descricaoAula">
                    <br>
                    <label for="linkAula">Link do Vídeo</label>
                    <input type="text" name="linkAula" id="linkAula">
                    <br>
                    <label for="duracaoAula">Duração</label>
                    <input type="text" name="duracaoAula" id="duracaoAula">
                    <br>
                    <label for="dataCriacao">Data de Criação</label>
                    <input type="text" name="dataCriacao" id="dataCriacao" value="" >
                    <br>
                    <input type="number" name="idCurso" id="idCurso" value="<%=curso[0].id%>" placeholder="<%=curso[0].id%>">
                    <input type="text" name="tituloCurso" id="tituloCurso" value="<%=curso[0].titulo%>" placeholder="<%=curso[0].titulo%>">
                    <button type="submit"> Cadastrar </button>

                </form>
            </div>

            <div class="parte3">
                <h2>Aulas Existentes</h2>

                <div id="aula1">  <%=curso[0].tituloAulaCurso%></div>

                <%aulas.forEach(aula=> {%>
                    <div id="aula1">  <%=aula.tituloAula%></div>
            
                <%})%>
                
                
            </div>
        </div>

        </div>


    </main>
    
</body>

<script>
    var dataAtual = new Date();

    var ano = dataAtual.getFullYear(); 
    var mes = dataAtual.getMonth() + 1; 
    var dia = dataAtual.getDate(); 

    var dataCompleta = ano + "-" + mes + "-" + dia;

    document.addEventListener('DOMContentLoaded', function(){

        var dataAulaInput = document.getElementById('dataCriacao');

        dataAulaInput.value = dataCompleta



    })



</script>

</html>